<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="byenkov.com.dices.diceroller.RollActivity"
    android:background="@color/colorPrimary"
    android:id="@+id/activity_roll">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="32dp"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/k4_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:src="@drawable/k4"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/k4_text"
                android:layout_width="260sp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corners"
                android:text=""
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/k6_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:src="@drawable/k6"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/k6_text"
                android:layout_width="260sp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corners"
                android:text=""
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/k8_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:src="@drawable/k8"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/k8_text"
                android:layout_width="260sp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corners"
                android:text=""
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/k20_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:src="@drawable/k20"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/k20_text"
                android:layout_width="260sp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corners"
                android:text=""
                android:textSize="32sp" />
        </LinearLayout>

        <Button
            android:id="@+id/reset_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Reset"
            android:layout_marginTop="16dp"/>

    </LinearLayout>


</RelativeLayout>
